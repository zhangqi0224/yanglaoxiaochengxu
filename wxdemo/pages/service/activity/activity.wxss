/* pages/index/index.wxss */



/*信息*/

.post-container {
  flex-direction: column;
  display: flex;
  margin-left: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10px;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.post-date {
  margin-left: 20px;
  vertical-align: middle;
}

.post-image {
  width: 100%;
  height: auto;
  margin: auto 0;
}

.post-date {
  font-size: 26rpx;
  margin-bottom: 10px;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin: 20rpx auto;
  letter-spacing: 2rpx;
  line-height: 50rpx;
  width: 90%;
  height: 50rpx;
  padding: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.post-like {
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image {
  height: 20px;
  width: 20px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}

.a {
  color: red;
}
.index_title{
  background: rgba(64, 211, 164, 1);
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 15rpx;
  font-size: 20px;
  color: white;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
}

/*信息end*/
