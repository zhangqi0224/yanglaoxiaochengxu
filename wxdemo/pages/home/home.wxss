/* pages/department/department.wxss */
page{
  background: white;
  overflow-x: hidden;
}
.container {
  padding: 0;
}

.card-container {
  width: 100%;
  background-color: #fff;
}

.card-container .section {
  padding: 20rpx 28rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ddd;
}

.card-container .section input {
  padding: 0 28rpx;
  margin-right: 160rpx;
  width: 100%;
  height: 72rpx;
  font-size: 30rpx;
  line-height: 72rpx;
  background: #f4f4f8;
  border: 2rpx solid #f4f4f8;
  border-radius: 12rpx;
  box-sizing: border-box;
}

/*主体部分*/

.clear {
  width: 100%;
  height: 20rpx;
  background: rgb(238, 238, 238);
}

.home_box{
  width: 100%;
  height: 200rpx;
  background: white;
  position: relative;
  box-shadow: 5px 5px 5px rgba(0, 0,0,0.2);
  margin-bottom: 8px;
}

.home_place_a {
  font-family: "微软雅黑";
  padding: 2rpx 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 14px;
  border-radius: 15rpx;
  background: rgb(130, 221, 232);
  color: white;
  display:inline-block;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.home_place_b {
  font-family: "微软雅黑";
  padding: 2rpx 20rpx;
