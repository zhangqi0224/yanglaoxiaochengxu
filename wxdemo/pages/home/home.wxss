.home_bed_a{
  color: rgb(130, 221, 232);
  font-size: 14px;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
}

.home_bed_b{
  color: rgb(150, 225, 105);
  font-size: 14px;
  height: 50rpx;
  line-height: 50rpx;
