/*tab切换*/
.tab{
  width: 100%;
}
.tab-title{
  width:100%;
  height:80rpx;
  line-height:80rpx;
  display:flex;
  flex-direction: row;
  font-size: 14px;
  color: rgb(192,192,192);
  font-family: "微软雅黑";
}
.tab-title view{
  width: 150rpx;
  margin: 0 auto;
  text-align:center;
}
.border-tottom{
  border-bottom:2px solid rgb(64, 211,164);
  color: rgb(64, 211,164);
}
.show{display:block;}
.hidden{display:none;}
