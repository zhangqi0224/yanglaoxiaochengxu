.container {
    padding: 0;
    background-color: #f4f4f8;
}

.card-container {
    width: 100%;
    background-color: #fff;
    overflow-x: hidden;
}

.card-container .section {
      width:100%;
      height:60px; 
       padding: 20rpx 28rpx;  
    box-sizing: border-box;
    border-bottom: 2rpx solid #ddd;
      position: relative;
      overflow-x: hidden;
}

.card-container .section input {
    padding: 0 28rpx;
    /* margin-right: 160rpx; */
    width: 100%;   
    height: 72rpx; 
    font-size: 30rpx;
    line-height: 72rpx;
    background: #f4f4f8;
    border: 2rpx solid #f4f4f8;
    border-radius: 12rpx;
    box-sizing: border-box;
  
}
 .card-container .section .searchbutton{
   height:50rpx;
